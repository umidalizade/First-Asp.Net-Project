@model IEnumerable<EntityLayer.Concrate.Comment>


<div class="comment-top">
    <h4>Comments for you A</h4>
    @if (Model.Count() > 0)
    {
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/CoreBlog/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body"> 
                    <h5 class="mt-0">@item.CommentUserName</h5>
                    <p>@item.CommentContent @ViewBag.Id</p>
                </div>
            </div>
        }
    }
    else
    {
        <div class="media">
            <div class="media-body">
                <h5 class="mt-0">there is not any comment for you</h5>
                <p> Be the first!!!</p>
            </div>

        </div>

    }
     
   

</div>

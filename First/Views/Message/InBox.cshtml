@using EntityLayer.Concrate
@model List<Message2>

@{
    ViewData["Title"] = "InBox";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>InBox</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Subject</th>
        <th>By Whom</th>
        <th>Date</th>
        <th>Read more</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.MessageId</td>
            <td>@item.Subject</td>
            <td>@item.SenderUser.WriterName</td>
            <td>@item.MessageDate</td>
            <td><a href="/Message/MessageDetails/@item.MessageId" class="btn btn-primary">Read more</a></td>
        </tr>
    }
</table>
<a href="///" class="btn btn-dark">New Message</a>


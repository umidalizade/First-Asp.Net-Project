@model EntityLayer.Concrate.Writer
@{
    ViewData["Title"] = "WriterEditProfile";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

@using (Html.BeginForm("WriterEditProfile", "Writer", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Writer's Profile Informations</h4>
                @Html.HiddenFor(x=>x.WriterId, new{@class="form-control"})
                <form class="forms-sample">

                    <div class="form-group">
                        <label for="exampleInputName1">Writer's name and Surname</label>
                        @Html.TextBoxFor(x=>x.WriterName, new {@class="form-control",  @id="exampleInputName1"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @Html.TextBoxFor(x=>x.WriterMail, new {@class="form-control",  @id="exampleInputEmail3"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        @Html.TextBoxFor(x=>x.WriterPassword, new {@class="form-control",  @id="exampleInputPassword4"})
                    </div>
                    <div class="form-group">
                        <label>Writer's Image</label>
                        <input type="file" name="img[]" class="file-upload-default">
                        <div class="input-group col-xs-12">
                            <input type="text" class="form-control file-upload-info" disabled placeholder="Upload Image">
                            <span class="input-group-append">
                                <button class="file-upload-browse btn btn-gradient-primary" type="button">Upload Image</button>
                            </span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Writer Abut</label>
                        @Html.TextAreaFor(x=>x.WriterAbout, 10,3, new{@class="form-control", id="exampleTextarea1"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Update</button>
                    <button class="btn btn-light">Cancel</button>
                </form>
            </div>
        </div>
    </div>

}


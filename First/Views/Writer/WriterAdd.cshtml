@model First.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<form class="form-group" method="post" enctype="multipart/form-data">
 <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Edit Writer's Profile Informations</h4>
                @Html.HiddenFor(x=>x.WriterId, new{@class="form-control"})
                <div  class="forms-sample">

                    <div class="form-group">
                        <label for="exampleInputName1">Writer's name and Surname</label>
                        @Html.TextBoxFor(x=>x.WriterName, new {@class="form-control",  @id="exampleInputName1"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Email address</label>
                        @Html.TextBoxFor(x=>x.WriterMail, new {@class="form-control",  @id="exampleInputEmail3"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Password</label>
                        @Html.TextBoxFor(x=>x.WriterPassword, new {@class="form-control",  @id="exampleInputPassword4"})
                    </div>
                    <div class="form-group">
                        <label>Writer's Image</label>
                        <input type="file" name="WriterImage"  class="form-control form-control-file"/>
                    </div>
                    <div class="form-group">
                        <label for="exampleTextarea1">Writer Abut</label>
                        @Html.TextAreaFor(x=>x.WriterAbout, 10,3, new{@class="form-control", id="exampleTextarea1"})
                    </div>
                    <button type="submit" class="btn btn-gradient-primary mr-2">Add</button>
                    <button class="btn btn-light">Cancel</button>
                </div>
            </div>
        </div>
    </div>    
</form>

